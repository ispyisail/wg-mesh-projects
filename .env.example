# WireGuard Mesh Network Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# MESH MANAGER DEFAULTS
# =============================================================================

# Default subnet for new mesh networks
WG_MESH_DEFAULT_SUBNET="10.99.0.0/24"

# Default WireGuard listening port
WG_MESH_DEFAULT_PORT="51820"

# Default persistent keepalive interval (seconds)
WG_MESH_DEFAULT_KEEPALIVE="25"

# =============================================================================
# DISCOVERY DEFAULTS
# =============================================================================

# Web UI port for mesh discovery
WG_DISCOVERY_WEBUI_PORT="8080"

# Localhost IP (used for scan exclusions)
WG_LOCALHOST_IP="127.0.0.1"
